<div class="min-h-screen bg-slate-900 text-white font-sans selection:bg-cyan-500 selection:text-white pb-10">
  
  <!-- content container -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
    
    <!-- hero section -->
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-4 animate-fade-in-down">
        Code Metrics
      </h1>
      <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto font-light">
        A personal tracker of my coding journey. Visualize my progress, languages, and dedication.
      </p>
    </div>

    <!-- stats grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      <!-- total time card -->
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-pink-600 to-purple-600 rounded-2xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-tilt"></div>
        <div class="relative px-7 py-10 bg-slate-800 ring-1 ring-gray-900/5 rounded-2xl leading-none flex items-center justify-center flex-col h-full">
            <span class="text-slate-400 text-sm font-medium uppercase tracking-wider mb-2">Total Time Coding</span>
            <span class="text-4xl md:text-5xl font-bold text-white"><%= timeText %></span>
        </div>
      </div>

      <!-- daily average card -->
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-cyan-600 to-blue-600 rounded-2xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-tilt"></div>
        <div class="relative px-7 py-10 bg-slate-800 ring-1 ring-gray-900/5 rounded-2xl leading-none flex items-center justify-center flex-col h-full">
            <span class="text-slate-400 text-sm font-medium uppercase tracking-wider mb-2">Daily Average</span>
            <span class="text-4xl md:text-5xl font-bold text-white"><%= dailyAverage %></span>
        </div>
      </div>
    </div>

    <!-- chart section -->
    <div class="bg-slate-800/50 backdrop-blur-xl border border-slate-700/50 rounded-3xl p-8 shadow-2xl">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <span class="w-1 h-8 bg-cyan-500 rounded-full"></span>
          Language Breakdown
        </h3>
      </div>
      
      <div class="w-full overflow-hidden rounded-xl bg-slate-900 p-4 border border-slate-700 relative min-h-[400px] flex items-center justify-center">
        <!-- wakatime embed -->
        <figure class="w-full h-full flex justify-center">
          <embed class="w-full h-[400px] md:h-[500px]" src="https://wakatime.com/share/@8f29a615-6b8d-4db9-9efd-a3f4296f2ec7/9ee22b81-ece7-49c7-8d97-756279668836.svg"></embed>
        </figure>
      </div>
      <div class="mt-4 text-center text-slate-500 text-sm">
        Data realtime from WakaTime API
        <br>
        <p>Made by <a href="https://github.com/bcsaalinas" class="creator-link inline-block font-medium text-cyan-400 transition-colors duration-300" target="_blank" rel="noopener noreferrer">bcsaalinas</a></p>
      </div>
    </div>

  </div>
</div>  

<style>
  @keyframes fade-in-down {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-down {
    animation: fade-in-down 0.8s ease-out;
  }
  
  .creator-link {
    position: relative;
    transition: all 0.3s ease;
  }
  
  .creator-link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: #22d3ee;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
    box-shadow: 0 0 10px #22d3ee, 0 0 20px #22d3ee;
  }
  
  .creator-link:hover {
    color: #fff;
    text-shadow: 0 0 10px rgba(34, 211, 238, 0.8);
    transform: translateY(-2px);
  }
  
  .creator-link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }
</style>
